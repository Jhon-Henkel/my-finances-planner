{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "space-before-function-paren": ["error", "never"],
        "vue/require-v-for-key": "off",
        "vue/multi-word-component-names": "off",
        "vue/no-mutating-props": "off",
        "vue/valid-v-for": "off",
        "vue/no-reserved-component-names": "off"
    }
}
